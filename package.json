{
  "name": "llm-mcp-client",
  "version": "1.0.0",
  "description": "Desktop application with embedded MCP servers for terminal and filesystem operations, integrated with OpenAI's LLMs",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build-renderer && electron .",
    "build": "npm run build-renderer && electron-builder",
    "build-renderer": "webpack --config webpack.config.js",
    "dev": "concurrently \"webpack --config webpack.config.js --watch\" \"electron .\"",
    "clean": "rimraf dist"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.llm.mcpclient",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
